<table class="table table-striped">
  <tr>
    <th>Название колоды</th>
    <th>
      <%= simple_form_for current_user, url: user_profile_path, method: :patch do |f| %>
        <%= f.hidden_field :current_deck, value: nil  %>
        <%= f.button :submit, "Отказаться от текущей колоды", class: "btn btn-default btn-xs" %>
      <% end %>
    </th>
  </tr>
  <% @decks.each do |deck| %>
    <tr>
      <td><%= deck.name %></td>
      <td>
        <% if deck.current?(current_user) %>
          <b> Текущая колода</b>
        <% else %>
          <%= simple_form_for current_user, url: user_profile_path, method: :patch do |f| %>
            <%= f.hidden_field :current_deck, value: deck.id %>
            <%= f.button :submit, "Сделать текущей", class: "btn btn-primary btn-xs" %>
          <% end %>
        <% end %>
      </td> 
    </tr>
  <% end %>
</table>
