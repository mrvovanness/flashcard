<div class="container">
  <%= simple_form_for :user, url: user_sessions_path, html: { class: "form-signin" } do |f| %>
    <%= f.input :email, input_html: { class: "form-control" } %>
    <%= f.input :password, input_html: { class: "form-control" } %><br>
    <%= f.button :submit, class: "btn btn-lg btn-primary btn-block" %><br>
  <% end %>
</div>
