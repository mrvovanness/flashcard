<div class="container">
  <%= form_tag user_sessions_path, class: "form-signin" do %>
    <%= text_field_tag :email, nil, placeholder: t(:email), class: "form-control" %>
    <%= password_field_tag :password, nil, placeholder: t(:password), class: "form-control" %><br>
    <%= submit_tag t(:login), class: "btn btn-lg btn-primary btn-block" %><br>
  <% end %>
</div>
