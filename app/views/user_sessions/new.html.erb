<div class="container">
  <%= form_tag user_sessions_path, class: "form-signin" do %>
    <%= text_field_tag :email, nil, placeholder: "Эл. почта", class: "form-control" %>
    <%= password_field_tag :password, nil, placeholder: "Пароль", class: "form-control" %><br>
    <%= submit_tag "Зайти", class: "btn btn-lg btn-primary btn-block" %><br>
  <% end %>
</div>
