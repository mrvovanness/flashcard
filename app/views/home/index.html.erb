<div class="row">
  <div class="col-md-6">
    <h3 class="text-center"> 
      <%=t ('.lead') %>
    </h3>
    <b>
      <%= t('decks.index.current_deck') %>:
      <% if current_user.current_deck.present? %>
        <%= current_user.current_deck.name %>
      <% else %>
        <%= t('.not_set') %>
      <% end %>
    </b>
  </div>
  <%= render "form", card: @card %>
</div>
