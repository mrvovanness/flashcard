<div id="card_check_form" class="col-md-6">
  <% if card.present? %>
    <h4><p class="bg-danger"><%= card.translated_text %></p></h4>
    <%= simple_form_for :check_data, url: check_path, html: { class: "form-inline", id: "check_form" } do |f| %>
      <%= f.input :card_id, as: :hidden, input_html: { value: card.id } %>
      <%= f.input :response_time, as: :hidden, input_html: { id: "timer" } %>
      <%= f.input :user_translation, label: false, input_html: { class: "form-control" } %>
      <%= f.button :submit, id: "check-button", class: "btn btn-primary" %><br><br>
      <%= image_tag card.picture_url, class: "img-rounded" %><br>
    <% end %><br>
  <% else %>
    <b><%= t ('.no_cards_for_review') %></b><br>
  <% end %>
</div>
