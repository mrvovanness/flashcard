<b><%= t('cards.index.card_count_label') %>:
  <%= current_user.cards.count %>
</b>
<table class="table table-striped">
  <tr>
    <th><%= t('.original_text') %></th>
    <th><%= t('.translated_text') %></th>
    <th><%= t('.review_date') %></th>
    <th colspan="3"></th>
  </tr>
  <% @cards.each do |card| %>
    <tr>
      <td><%= card.original_text %></td>
        <td><%= card.translated_text %></td>
        <td><%= card.review_date %></td>
        <td><%= link_to t('action_links.show'), card_path(card) %></td>
        <td><%= link_to t('action_links.edit'), edit_card_path(card) %></td>
        <td><%= link_to t('action_links.delete'), card_path(card), 
          method: :delete, 
          data: { confirm: t('card.delete') } %></td>
    </tr>
  <% end %>
</table>
